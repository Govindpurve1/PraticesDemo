<style>
    .texBoxStyle {
        background-color: black;
        color: white;
    }
</style>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script type="text/javascript">

        $(document).ready(function () {
            $('#CountryId').focus();
            $('input[type="text"]').each(function () {
                $(this).focus(function () {
                    $(this).addClass('texBoxStyle');
                });
                $(this).blur(function () {
                    $(this).removeClass('texBoxStyle');
                });
            });
        });
</script>




